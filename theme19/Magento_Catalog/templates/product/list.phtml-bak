                            if ($isPrimeur && $_product->getFinalPrice() <= 0) { ?>
                                <?php
                                echo __('primeur price'); ?>
                                <?php
                                echo '<span class="tooltiptext">' . __('to be confirmed') . '</span>'; ?>
                                <?php
                            } else { ?>
                                <span><?= /* @noEscape */
                                    $customHelper->getPriceHtmlforlist($_product) ?></span>
                                <?php
                            } ?>
